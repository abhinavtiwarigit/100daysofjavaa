package day1;
import java.util.*;
public class StarPattern {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n=5;// n is number of rows
		
		/* 1)Basic Square Pattern
			 * * * * * 
			 * * * * * 
			 * * * * * 
			 * * * * * 
			 * * * * *
		for(int i=1;i<=n;i++) {  // outer loop determines rows 
			for(int j=1;j<=n;j++) { // inner loop determines columns
				System.out.print("* ");
			}
			System.out.println();
		} 
		 2)Increasing triangle pattern
		      * 
		      * * 
		      * * * 
		      * * * * 
		      * * * * * 	 
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print("* ");
			}
			System.out.println();
		}
		*/
		for(int i=1;i<=n;i++) {
			for(int j=i;j<=n;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
