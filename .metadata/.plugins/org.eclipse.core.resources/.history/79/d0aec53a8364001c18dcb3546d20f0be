package mypackage;

import java.util.Scanner;

public class Pattern {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=5;//n rows
	
	
		for(int i=1;i<=n;i++) { //   i is number of rows
			for(int j=i;j<=n;j++) { // j is number of columns
				System.out.print(" "); 
			}
			for(int j=1;j<=i;j++) { 
				System.out.print(" *");
			}
			for(int j=i;j<=n;j++) { // j is number of columns
				System.out.print("  "); 
			}
			for(int j=1;j<=i;j++) { 
				System.out.print(" *");
			}
			
			System.out.println();
			

		}
		

	}

}

